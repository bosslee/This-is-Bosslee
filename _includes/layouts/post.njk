--- 
layout: layouts/base.njk 
section: post 
---

<article>
  <h1>{{ title }}</h1>
  <p>
    {% if author %}
      {% set author_name = author%}
    {% else %}
      {% set author_name = metadata.author.name%}
    {% endif %}
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
      by
      {{ author_name }}
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
      {% for tag in tags %}
        {%- if tag != "post" -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
</nav>